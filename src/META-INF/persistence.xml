<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistencehttp://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="2.0">

	<persistence-unit name="Kites-Jory" transaction-type="RESOURCE_LOCAL">
		<provider>com.objectdb.jpa.Provider</provider>
		<class>com.asterphoenix.kites.jory.model.Customer</class>
		<class>com.asterphoenix.kites.jory.model.Category</class>
		<class>com.asterphoenix.kites.jory.model.Product</class>
		<class>com.asterphoenix.kites.jory.model.Order</class>
		<class>com.asterphoenix.kites.jory.model.OrderItem</class>
		<class>com.asterphoenix.kites.jory.model.User</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="objectdb://localhost/Kites/KDB.temp"></property>
			<property name="javax.persistence.jdbc.user" value="admin"></property>
			<property name="javax.persistence.jdbc.password" value="admin"></property>
		</properties>
	</persistence-unit>
</persistence>
